<%- include('../partials/header') %>
<link rel="stylesheet" href="/stylesheets/style.css" />
<div
  id="header"
  class="row flex-lg-row-reverse align-items-center g-5 py-4 mb-4"
>
  <div class="col-12 col-lg-6">
    <p class="lead">
      Hello fellow chef,<br />Discover a culinary journey, Cooks from across the
      globe share their favorite recipes.
    </p>
  </div>
  <div id="hero-image" class="cold-12 col-lg-6">
    <img
      src="/images/logo.jpg"
      width="600"
      height="500"
      class="d-block mx-lg-auto img-fluid"
      loading="lazy"
    />
  </div>
</div>

<div class="row row-cols-2 row-cols-lg-6 g-2 g-lg-3 py-4">
  <% if(categories != '') { %> <% categories.forEach(function(category, idx){ %>
  <a href="#" class="col text-center category__link">
    <div class="category__img shadow">
      <img src="/images/<%- category.image %>" alt="category.name" loading="lazy" />
    </div>
    <div class="pt-1">category.name</div>
  </a>
  <% }) %> 
<% } %>
  <a href="/categories" class="col text-center category__link">
    <div class="category__img shadow">
      <img src="/images/american.jpg" alt="More" loading="lazy" />
    </div>
    <div class="pt-1">More</div>
  </a>
</div>

<section class="px-4 py-5 my-5 text-center">
  <h1 class="display-5 fw-bold">Publish Recipe</h1>
  <div class="col-lg-6 mx-auto">
    <p class="lead mb-4">
      Publish your own recipe! <br />
      Follow the easy guide for publishing a successful recipe.<br />Click on
      Publish Recipe to begin.
    </p>
    <div class="d-grid gap-2 d-sm-flex justify-content-sm-center">
      <a href="/submit" class="btn btn-primary btn-dark btn-lg"
        >Publish Recipe</a
      >
    </div>
  </div>
</section>

<script
  src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"
  integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm"
  crossorigin="anonymous"
></script>

<%- include('../partials/footer') %>
