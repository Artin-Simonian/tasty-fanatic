<%- include('../partials/header') %>

<section class="px-4 py-5 my-5 text-center">
    <h1 class="display-5 fw-bold">Publish Recipe</h1>
  </section>

  <div class="px-4 py-5 my-5 text-center">
    <h1 class="display-5 fw-bold">Submit Recipe</h1>
    <div class="col-lg-6 mx-auto">
      <p class="lead">Hi</p>
    </div>
  </div>

  <div class="row justify-content-center">
    <div class="col-8">
      <form action="/submit" enctype="multipart/form-data" method="POST">
        <div class="row g-3">
          <div class="col-12">
            <label for="name" class="form-label">Recipe Name</label>
            <input type="text" name="name" id="name">
          </div>
          <div class="col-12">
            <label for="description" class="form-label">Description</label>
            <textarea name="description" id="description" class="form-control" cols="30" rows="4"></textarea>
          </div>
          <div class="col-12">
            <label for="name" class="form-label">Ingredients</label>
            <div class="IngredientList"></div>
            <div class="IngredientDiv" mb-1></div>
            <input type="text" name="ingredients">
            
          </div>
          <div class="col-12">
            <button type="button" class="btn btn-outline-primary" id="addIngredientsBtn">+ Ingredient</button>
          </div>
          <div class="col-12">
            <label for="image">Image</label>
            <input type="file" class="form-control" name="image" accept="image/*">
          </div>
          <div class="cold-12">
            <button type="button" class="btn btn-primary">Submit</button>
          </div>
        </div>
      



    </div>
  </div>
  </form>
  <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm"
    crossorigin="anonymous"
  ></script>

